# ESPHome Secrets - Copy to secrets.yaml and fill in values
# DO NOT commit secrets.yaml to version control

# WiFi credentials
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# API encryption key - Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
api_encryption_key: "GENERATE_32_BYTE_BASE64_KEY"

# OTA password for firmware updates
ota_password: "your_secure_ota_password"

# Fallback AP password (used when WiFi fails)
fallback_ap_password: "fallback_ap_password"
