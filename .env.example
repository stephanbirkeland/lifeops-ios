# LifeOps Environment Configuration
# Copy to .env and fill in your values

# ===========================================
# Database
# ===========================================
DB_PASSWORD=your_secure_database_password

# Stats Service Database
STATS_DB_PASSWORD=your_stats_database_password

# ===========================================
# Security
# ===========================================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_jwt_secret_here

# ===========================================
# Oura Ring API
# ===========================================
# Get from: https://cloud.ouraring.com/personal-access-tokens
OURA_ACCESS_TOKEN=your_oura_personal_access_token

# Optional: OAuth2 credentials (for refresh tokens)
OURA_CLIENT_ID=
OURA_CLIENT_SECRET=

# ===========================================
# Environment
# ===========================================
ENVIRONMENT=development
# Options: development, production

# Debug mode (enables hot reload, verbose logging)
DEBUG=true

# ===========================================
# Optional: External APIs
# ===========================================
# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS=

# Apple Calendar (CalDAV)
APPLE_CALENDAR_USER=
APPLE_CALENDAR_APP_PASSWORD=
